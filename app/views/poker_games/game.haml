.row.column
  %hr
  = link_to "Give Cards", game_path(play: true, croupier: @alfred.id), class: "button large"
  = link_to "Shuffle deck", game_path(shuffle: true, croupier: @alfred.id, play: true), class: "button large"
  %p.lead #{@winner}
  %p.lead cards in the deck: #{@alfred.cards.count}
  %hr
- if @hands.present?
  - @hands.each do |hand|
    .row.small-up-1.medium-up-2.large-up-5
      - hand.hand.each do |card|
        .column
          .callout
            %p.lead #{card['suit']}
            %p.lead #{card['number']}
      %h1 #{hand.rank}

      %hr
